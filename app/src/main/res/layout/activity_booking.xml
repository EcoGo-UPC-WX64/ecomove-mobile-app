<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6F4FB"
        android:backgroundTint="#E6F4FB"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="RESERVA"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:orientation="vertical"
            android:padding="40dp">

            <!-- Fecha de inicio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Fecha inicio"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fechaInicio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="mm_dd_yyyy"
                    android:inputType="none"
                    android:minHeight="48dp"
                    android:padding="12dp" />

                <ImageButton
                    android:id="@+id/btnFechaInicio"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calendar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="seleccionar fecha de inicio"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" android:layout_width="48dp"/>

            </LinearLayout>

            <!-- Fecha de fin -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Fecha fin"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/fechaFin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:hint="mm_dd_yyyy"
                    android:inputType="none"
                    android:minHeight="48dp"
                    android:padding="12dp" />

                <ImageButton
                    android:id="@+id/btnFechaFin"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calendar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Seleccionar_fecha_de_fin"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp"/>

            </LinearLayout>

            <!-- Distrito -->
            <EditText
                android:id="@+id/edtDistrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Distrito"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp" />

            <!-- BotÃ³n de reserva -->
            <Button
                android:id="@+id/btnComenzarReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:backgroundTint="#1E88E5"
                android:text="Comenzar reserva" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>